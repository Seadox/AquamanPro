<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/background_dark">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/workout_data_item_SIV_color"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:background="@color/workout_data_item_red"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/workout_data_item_MTV_rounders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/workout_data_item_SIV_color"
        android:layout_alignTop="@id/workout_data_item_SIV_color"
        android:text="2"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="5dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/workout_data_item_MTV_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/workout_data_item_MTV_rounders"
        android:layout_alignTop="@id/workout_data_item_SIV_color"
        android:text="X"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginHorizontal="1dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/workout_data_item_MTV_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/workout_data_item_MTV_x"
        android:layout_alignTop="@id/workout_data_item_SIV_color"
        android:text="100"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginHorizontal="1dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/workout_data_item_MTV_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/workout_data_item_MTV_distance"
        android:layout_alignTop="@id/workout_data_item_SIV_color"
        android:text="Free"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginHorizontal="5dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/workout_data_item_MTV_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/workout_data_item_SIV_color"
        android:text="2:00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginHorizontal="5dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/workout_data_item_SIV_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/workout_data_item_MTV_time"
        android:src="@drawable/timer"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/workout_data_item_SIV_fins"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@id/workout_data_item_SIV_timer"
        android:src="@drawable/fins"
        android:layout_marginEnd="1dp"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/workout_data_item_SIV_pullBuoy"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@id/workout_data_item_SIV_fins"
        android:src="@drawable/pull_buoy"
        android:layout_marginEnd="1dp"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/workout_data_item_SIV_paddles"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@id/workout_data_item_SIV_pullBuoy"
        android:src="@drawable/paddles"
        android:layout_marginEnd="1dp"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/workout_data_item_SIV_kikboard"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@id/workout_data_item_SIV_paddles"
        android:src="@drawable/kikboard"
        android:layout_marginEnd="1dp"
        app:shapeAppearanceOverlay="@style/circleImageView" />
</RelativeLayout>